{
  "compileOnSave": false,
  "include": [
    "src/**.ts",
    "src/**/**.vue"
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "incremental": true,
    "allowJs": true,
    "lib": [
      "ES7",
      "DOM",
      "ES2021"
    ],
    
    "baseUrl": ".",
    "paths": {
      "SCSS/*": [ "src/SCSS/*" ],
      "Enums/*": [ "src/Enums/*" ],
      "Pages/*": [ "src/Pages/*" ],
      "Models/*": [ "src/Models/*" ],
      "Services/*": [ "src/Services/*" ],
      "Components/*": [ "src/Components/*" ],
      "TestDependencies/*": [ "src/TestDependencies/*" ]
    }
  }
}